rule:
 slideSuivante
conditions:
  bascule.switchButton == 1
actions:
  nextSlide

rule:
  slidePrecedente
conditions:
  bascule.switchButton == 2
actions:
  previousSlide

rule:
  flecheHaut
conditions:
  bascule.switchButton == 4
actions:
  pressUp

rule:
  flecheBas
conditions:
  bascule.switchButton == 3
actions:
  pressDown

rule:
  enter
conditions:
  aileEst.contact == 1
actions:
  pressEnter

rule:
  gaming
conditions:
  aileOuest.contact == 1
actions:
  startJeu

